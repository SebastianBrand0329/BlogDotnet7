@model BlogCore.Models.ViewModels.ArticleVM

@{
    ViewData["Title"] = "Crear Artículo";
}

<br />
<br />

<h3 class="texte-center">Crear una nuevo artículo</h3>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.Name"></label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Article.Name" class="form-control border" placeholder="Ingrese el nombre del artículo..." />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.Description"></label>
                    </label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Article.Description" class="form-control mt-2 border" placeholder="Ingrese la descrición del artículo..." ></textarea>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8 mt-2">
                        <label for="Category">Categoría</label>
                    </label>
                </div>
                <div class="col-8 mt-2">
                    @Html.DropDownListFor(m => m.Article.CategoriaId, Model.ListArticles, "-Por favor seleccione una categoría-",
                    new {@class = "form-control"})
                </div>

            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.UrlImage"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="loadFile" class="form-control" />
                </div>

            </div>
            <div class="form-group row mt-2 m-lg-2">
                <div class="col-8">
                    <partial name="_CreateReturnView" />
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.7.0/tinymce.min.js" integrity="sha512-kGk8SWqEKL++Kd6+uNcBT7B8Lne94LjGEMqPS6rpDpeglJf3xpczBSSCmhSEmXfHTnQ7inRXXxKob4ZuJy3WSQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>

}