@model BlogCore.Models.ViewModels.ArticleVM

@{
    ViewData["Title"] = "Editar Artículo";
}

<br />
<br />

<h3 class="texte-center">Editar artículo</h3>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <!-- Send Id Article Hidden Update-->
    <input type="hidden" asp-for="Article.Id" />
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.Name"></label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Article.Name" class="form-control border" placeholder="Ingrese el nombre del artículo..." />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.Description"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Article.Description" class="form-control mt-2 border" placeholder="Ingrese la descrición del artículo..."/>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8 mt-2">
                        <label for="Category">Categoría</label>
                    </label>
                </div>
                <div class="col-8 mt-2">
                    @Html.DropDownListFor(m => m.Article.CategoriaId, Model.ListArticles, "-Por favor seleccione una categoría-",
                    new {@class = "form-control"})
                </div>

            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Article.UrlImage"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="loadFile" class="form-control" />
                </div>

            </div>
            <div class="form-group row mt-2 m-lg-2">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Article.Id">
                        <i class="fa-solid fa-pen-to-square"></i> Actualizar
                    </button>
                </div>

                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                </div>

            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.Article.UrlImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>

