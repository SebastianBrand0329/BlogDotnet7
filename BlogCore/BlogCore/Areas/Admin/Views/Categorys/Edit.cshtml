@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Editar Categoría";
}

<br />
<br />

<h3 class="texte-center">Editar categoría</h3>

<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Name"></label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Name" class="form-control border" placeholder="Ingrese un nombre de categoría..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Order"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Order" class="form-control mt-2 border" placeholder="Ingrese un orden de guardado..." />
                    @* <span asp-validation-for="Order" class="text-danger"></span>*@
                </div>

            </div>
            <div class="form-group row mt-2 m-lg-2">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">
                        <i class="fa-solid fa-pen-to-square"></i> Actualizar
                    </button>
                </div>

                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                </div>

            </div>
        </div>
    </div>
</form>