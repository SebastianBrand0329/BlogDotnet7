@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Crear Slider";
}

<br />
<br />

<h3 class="text-center"> Crear Nuevo Slider</h3>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Name"></label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Name" class="form-control border" placeholder="Ingrese el nombre del slider..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="State"></label>
                    </label>
                </div>
                <div class="col-8">
                    <textarea asp-for="State" class="form-control mt-2 border" placeholder="Ingrese el estado del slider..."></textarea>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="UrlImage"></label>
                    </label>
                </div>
                <div class="col-8 ">
                    <input type="file" name="files" id="loadFile" class="form-control border" />
                </div>

            </div>
            <div class="form-group row mt-2 m-lg-2">
                <div class="col-8">
                    <partial name="_CreateReturnView" />
                </div>

            </div>
        </div>
    </div>
</form>